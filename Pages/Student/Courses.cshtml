                        </div>
                        <div class="meta-item">
                            <span class="meta-label">Level</span>
                            <span class="meta-value level-intermediate">Intermediate</span>
                        </div>
                    </div>
                    <div class="course-actions">
                        <button class="btn btn-primary">View Details</button>
                        <button class="btn btn-secondary">Enroll</button>
                    </div>
                </div>
            </div>

            <!-- Course 4 -->
            <div class="course-card">
                <div class="course-image" style="background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);">
                    🤖
                </div>
                <div class="course-content">
                    <div class="course-header">
                        <div>
                            <span class="course-category">Programming</span>
                            <h3 class="course-title">Machine Learning Basics</h3>
