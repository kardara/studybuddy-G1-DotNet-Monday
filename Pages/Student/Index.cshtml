@page
@model STUDYBUDDY.Pages.Student.IndexModel
@{
}


@{
    ViewData["Title"] = "Quiz Management";
}

<h3>Quiz Management</h3>

<link rel="stylesheet" href="~/css/QuizLayout.css" />

<div class="container">
    <div class="header">
        <h1>📚 Quiz Management</h1>
        <button class="btn btn-primary" id="createQuizBtn">+ Create New Quiz</button>
    </div>

    <div id="quizContainer" class="quiz-grid">
        <!-- Quizzes will be displayed here -->
    </div>

    <div id="emptyState" class="empty-state">
        <h2>No Quizzes Yet</h2>
        <p>Create your first quiz to get started!</p>
        <button class="btn btn-primary" id="createFirstQuizBtn">+ Create Quiz</button>
    </div>
</div>

<!-- Modal -->
<div id="quizModal" class="modal">
    <div class="modal-content">
        <h2>Create New Quiz</h2>
        <form id="quizForm">
            <div class="form-group">
                <label for="quizName">Quiz Title</label>
                <input type="text" id="quizName" placeholder="Enter quiz title" class="form-control" required />
            </div>

            <div class="form-group">
                <label for="quizDescription">Description</label>
                <textarea id="quizDescription" placeholder="Enter quiz description" class="form-control"></textarea>
            </div>

            <div class="form-group">
                <label for="quizQuestions">Number of Questions</label>
                <input type="number" id="quizQuestions" min="1" value="10" class="form-control" required />
            </div>

            <div class="form-group">
                <label for="quizDuration">Duration (minutes)</label>
                <input type="number" id="quizDuration" min="1" value="30" class="form-control" required />
            </div>

            <div class="form-group">
                <label for="quizStatus">Status</label>
                <select id="quizStatus" class="form-control">
                    <option value="active">Active</option>
                    <option value="draft">Draft</option>
                </select>
            </div>

            <div class="modal-actions">
                <button type="submit" class="btn btn-primary">Save Quiz</button>
                <button type="button" class="btn btn-secondary" id="cancelBtn">Cancel</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/quizManagement.js"></script>
}